[Unit]
Description=Btcgreen's distributed currency daemon
After=network.target

[Service]
User=btcgreen
Group=btcgreen

Type=forking
PIDFile=/var/lib/dashd/dashd.pid
ExecStart=/usr/bin/dashd -daemon -pid=/var/lib/dashd/dashd.pid \
-conf=/etc/btcgreen/btcgreen.conf -datadir=/var/lib/dashd -disablewallet

Restart=always
PrivateTmp=true
TimeoutStopSec=60s
TimeoutStartSec=2s
StartLimitInterval=120s
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
